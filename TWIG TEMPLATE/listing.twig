                    {% include '_header.twig' %}

                       <!-- Post -->
    {% setcontent records = "entries/latest/6" allowpaging %}
        {% for record in records %}
                                <article class="is-post is-post-excerpt">
                                    <header>
                                        <!--
                                            Note: Titles and bylines will wrap automatically when necessary, so don't worry
                                            if they get too long. You can also remove the "byline" span entirely if you don't
                                            need a byline.
                                        -->
                                        <h2><a href="{{ record.link }}">{{ record.title }}</a></h2>
                                        <span class="byline">{% if record.introduction %}{{ record.introduction }}{% elseif record.teaser %}{% endif %}</span>
                                    </header>
                                    <div class="info">
                                        <!--
                                            Note: The date should be formatted exactly as it's shown below. In particular, the
                                            "least significant" characters of the month should be encapsulated in a <span>
                                            element to denote what gets dropped in 1200px mode (eg. the "uary" in "January").
                                            Oh, and if you don't need a date for a particular page or post you can simply delete
                                            the entire "date" element.
                                            
                                        -->
                                        <span class="date"><span class="month">{% set recdate = record.datepublish|localdate("%A %B %e, %Y") %}</span></span> <span class="day">14</span><span class="year">, 2013</span></span>
                                        <!--
                                            Note: You can change the number of list items in "stats" to whatever you want.
                                        -->
                                        <ul class="stats">
                                            <li><a href="#" class="link-icon24 link-icon24-1">16</a></li>
                                            <li><a href="#" class="link-icon24 link-icon24-2">32</a></li>
                                            <li><a href="#" class="link-icon24 link-icon24-3">64</a></li>
                                            <li><a href="#" class="link-icon24 link-icon24-4">128</a></li>
                                        </ul>
                                    </div>
                                    {% if record.image!="" %}
                                    <a href="{{ image(record.image) }}" class="image image-full"><img src="{{ thumbnail(record.image, 800, 520) }}" alt="" /></a>{% endif %}
                                    <p>
                                        {{ record.excerpt(220) }}
                                    </p>
                                </article>
                        {% endfor %}

                    {{ pager() }}
                            <!-- Pager -->
                                <div class="pager">
                                    <!--<a href="#" class="button previous">Previous Page</a>-->
                                    <div class="pages">
                                        <a href="#" class="active">1</a>
                                        <a href="#">2</a>
                                        <a href="#">3</a>
                                        <a href="#">4</a>
                                        <span>&hellip;</span>
                                        <a href="#">20</a>
                                    </div>
                                    <a href="#" class="button next">Next Page</a>
                                </div>

                        </div>
                    </div>

                <!-- Sidebar -->
    {% include '_aside.twig' %}

            </div>

    </body>
</html>