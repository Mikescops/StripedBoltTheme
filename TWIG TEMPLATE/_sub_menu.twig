
                            {% for item in menu %}

    <li class="index-{{ loop.index }}{% if loop.first %} first{% endif %}{% if loop.last %} last{% endif %}{% if item|current %} current_page_item{% endif %}">
        <a href="{{ item.link }}" {% if item.title is defined %}title='{{ item.title|escape }}'{% endif %}
           class='{% if item.class is defined %}{{item.class}}{% endif %}'>
            {{item.label}}
        </a>

    </li>

{% endfor %}